{% extends 'base.html.twig' %}

{% block title %}Hello CreateController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>/app/src/Controller/CreateController.php</code></li>
        <li>Your template at <code>/app/templates/create/index.html.twig</code></li>
    </ul>
    <div class="row mt-6">
        <ul class="list-group">
        {% for user in users %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <p>Email : {{ user.email }} </p>
                <p>Email vérifié : {{ user.isVerified }} </p>
                {# -> {{ user.userRole }} #}
                <ul>
                    {% for role in user.roles %}
                        <li>
                            <p>Role : {{role}} </p>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
        
        </ul>
    </div>
</div>
{% endblock %}
