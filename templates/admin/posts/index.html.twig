{% extends 'base.html.twig' %}

{% block title %}Hello PostsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>/app/src/Controller/Admin/PostsController.php</code></li>
        <li>Your template at <code>/app/templates/admin/posts/index.html.twig</code></li>
    </ul>
</div>
<div>
    <ul>
        {% for post in posts %}
            <li>
                <h3>{{post.title}}</h3>
                <p>{{post.shortDescription}}</p>
                <p>{{post.longDescription}}</p>
                <p>Publié : {{post.isPublished}}</p>
            </li>
        {% endfor %}
    </ul>
</div>

{% endblock %}
