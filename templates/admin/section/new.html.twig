{% extends 'layout/admin.html.twig' %}

{% block title %}Hello SectionController!{% endblock %}

{% block main %}
<section class="bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16 lg:px-12">
       
        <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Mais c'est qu'ils sont mignons <br>tout pleins vos posts !!!</h1>
        <p class="mb-8 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400">Ici, vous pouvez créer des posts, incérer les visuels de vos projets créatifs, expliquer le context et les rendre visibles au monde entier.</p>
        
    </div>
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-12 lg:px-12">
       {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
            <h3>Projet</h3>
            {{ form_row(form.projets) }}
            <h3>Section</h3>
            {# <div class="grid gap-6 mb-6 md:grid-cols-2">
                <div>
                    {{ form_row(form.range_position) }}
                
                </div>
                <div>
                    {{ form_row(form.description) }}
                </div>
            </div> #}
            
            {{ form_row(form.description) }}
            
            <h3>Photo</h3>
            {{ form_row(form.alt) }}
            {{ form_row(form.description_photo) }}
            {{ form_row(form.imageFile) }}

            <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 mt-6">Enregistrer</button>
        {{ form_end(form) }}
    </div>
   
</section>


{% endblock %}
